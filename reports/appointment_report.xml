<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_appointment" model="ir.actions.report">
        <field name="name">Appointment Report</field>
        <field name="model">hospital.appointment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hospital_management.appointment_report_template</field>
        <field name="report_file">hospital_management.appointment_report_template</field>
        <field name="binding_model_id" ref="model_hospital_appointment"/>
        <field name="binding_type">report</field>
    </record>

    <template id="appointment_report_template">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <h2>
                        Appointment Report
                    </h2>
                    <style>
                        p{
                        font-size: 25px;
                        color: #1E90FF;
                        font-weight: bold;
                        margin-bottom: 15px;
                        border-radius: 8px;
                        margin-top: 0;
                        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                        }

                        h2 {
                        font-size: 24px;
                        font-weight: bold;
                        color: #fff;
                        background-color: #007bff;
                        padding: 10px;
                        text-align: center;
                        border-radius: 8px;
                        margin-top: 0;
                        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                        }

                        div{
                        margin-bottom: 10px;
                        font-size: 18px;
                        }

                        strong{
                        color: #000;
                        }

                        .quote-section {
                        margin-top: 30px;
                        padding: 15px;
                        border-top: 2px solid #ddd;
                        text-align: center;
                        font-style: italic;
                        color: #555;
                        font-size: 16px;
                        }
                        .signature {
                        margin-top: 20px;
                        text-align: right;
                        font-weight: bold;
                        font-size: 16px;
                        color: #333;
                        }
                    </style>
                    <div>
                        <strong>Reference :</strong>
                        <t t-esc="o.ref"/>
                    </div>
                    <div>
                        <strong>Patient :</strong>
                        <t t-esc="o.patient_id.name"/>
                    </div>
                    <div>
                        <strong>Doctor :</strong>
                        <t t-esc="o.doctor_id.name"/>
                    </div>
                    <div>
                        <strong>Duration (Hours) :</strong>
                        <t t-esc="o.duration"/>
                    </div>
                    <div>
                        <strong>Appointment Fee :</strong>
                        <t t-esc="o.fee"/>
                    </div>
                    <div>
                        <strong>Appointment Type :</strong>
                        <t t-esc="o.appointment_type"/>
                    </div>
                    <div>
                        <strong>Priority :</strong>
                        <t t-esc="o.priority"/>
                    </div>
                    <div>
                        <strong>Status :</strong>
                        <t t-esc="o.state"/>
                    </div>
                    <div>
                        <strong>Notes :</strong>
                        <t t-esc="o.notes"/>
                    </div>
                    <div class="quote-section">
                        "The good physician treats the disease; the great physician treats the patient who has the
                        disease."
                        â€“ William Osler
                    </div>
                    <div class="signature">
                        Prepared by: Mohamed Yehya
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>